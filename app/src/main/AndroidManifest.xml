<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appmob.projet_app_mob">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.Connexion" />
        <activity android:name=".activity.Inscription" />
        <activity android:name=".activity.CreateProj" />
        <activity android:name=".activity.Account" />
        <activity android:name=".activity.ViewProj" />
        <activity android:name=".activity.AlarmActivity"></activity>

        <receiver android:name=".activity.AlarmReceiver" />

    </application>

</manifest>